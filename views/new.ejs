<% include partials/header %>

<div class='ui main text container segment'>
   <div class='ui huge header'>New Blog</div>
</div>

<form class='ui form' action="/blogs" method='POST'>
   <div class='field'>
      <label for="blog[title]">Title</label>
      <input type="text" placeholder='Title' name='blog[title]'>
   </div>
   <div class='field'>
      <label for="blog[image]">Image</label>
      <input type="text" placeholder='image' name='blog[image]'>
   </div>
   <div class='field'>
      <label for="blog[body]">Blog</label>
      <textarea name="blog[body]" cols="30" rows="10"></textarea>
   </div>
   <button class='ui violet basic button big'>Submit</button>
</form>

<% include partials/footer %>